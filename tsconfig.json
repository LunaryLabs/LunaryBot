{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022"],
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "src/",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "moduleResolution": "Node",
    "moduleDetection": "auto",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "paths": {
      // Direct Paths
      "@db": ["./src/prisma"],

      // Aliases Paths
      "$lib/*": ["./src/lib/*"],
      "$types/*": ["./src/types/*"],
      "$commands/*": ["./src/commands/*"],
      "$events/*": ["./src/events/*"],
      "$plugins/*": ["./src/plugins/*"],
      "$/*": ["./*"]
    },
  },

  "buildOptions": {
    "verbose": true,
    "incremental": true,
    "traceResolution": true,
  },
  "exclude": ["node_modules/", "dist"],
  "include": ["src/", "prisma/"]
}
