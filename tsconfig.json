{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "src/",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "Node",
    "moduleDetection": "auto",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "paths": {
      "$lib/*": ["./src/lib/*"],
      "$types/*": ["./src/types/*"],
      "$commands/*": ["./src/commands/*"],
      "$events/*": ["./src/events/*"],
      "$/*": ["./*"],
      "$plugins/*": ["./src/plugins/*"]
    },   
  },

  "buildOptions": {
    "verbose": true,
    "incremental": true,
    "traceResolution": true,
  },
  "exclude": ["node_modules/", "dist"],
  "include": ["src/"]
}